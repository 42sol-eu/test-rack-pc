# Production Environment Variables
# Override default values for production

# Build Configuration
BUILD_ENV=production
BUILD_LOG_LEVEL=warn
BUILD_MINIFY=true
BUILD_OPTIMIZE=true

# Production Registry
CI_REGISTRY=registry.gitlab.com
CI_REGISTRY_IMAGE=${PROJECT_NAME}

# Publishing Configuration
PUBLISH_TAG=${PROJECT_VERSION}
PUBLISH_LATEST=true

# Security Settings
SECURITY_SCAN=true
VULNERABILITY_CHECK=true

# Performance Settings
CACHE_ENABLED=true
COMPRESSION=true