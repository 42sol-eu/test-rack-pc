# GitHub Actions Environment Variables
# Maps GitHub Actions context to project variables

# GitHub-specific CI Variables
BUILD_ENV=ci
CI_PROVIDER=github
CI_BUILD_ID=${GITHUB_RUN_ID}
CI_BUILD_NUMBER=${GITHUB_RUN_NUMBER}
CI_JOB_ID=${GITHUB_JOB}
CI_PIPELINE_ID=${GITHUB_WORKFLOW}

# Source Control
CI_COMMIT_SHA=${GITHUB_SHA}
CI_COMMIT_REF_NAME=${GITHUB_REF_NAME}
CI_COMMIT_BRANCH=${GITHUB_HEAD_REF:-${GITHUB_REF_NAME}}
CI_COMMIT_TAG=${GITHUB_REF_TYPE == 'tag' && GITHUB_REF_NAME}

# Registry Configuration
CI_REGISTRY=ghcr.io
CI_REGISTRY_USER=${GITHUB_ACTOR}
CI_REGISTRY_PASSWORD=${GITHUB_TOKEN}
CI_REGISTRY_IMAGE=ghcr.io/${GITHUB_REPOSITORY}

# Publishing
PUBLISH_REGISTRY=ghcr.io
PUBLISH_IMAGE=ghcr.io/${GITHUB_REPOSITORY}/${PROJECT_NAME}

# Artifacts
ARTIFACT_REGISTRY=ghcr.io
ARTIFACT_PATH=artifacts